<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <itemSchema  android:state_focused="false">
        <layer-list>

            <itemSchema android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <stroke android:color="@color/colorAccent" android:width="1dp"/>
                    <corners android:radius="12px" />
                </shape>
            </itemSchema>
        </layer-list>
    </itemSchema>
    <itemSchema android:state_focused="true">
        <layer-list>
            <itemSchema android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <stroke android:color="@color/colorAccent" android:width="1dp"/>
                    <corners android:radius="12dp" />
                </shape>
            </itemSchema>
        </layer-list>
    </itemSchema>
</selector>